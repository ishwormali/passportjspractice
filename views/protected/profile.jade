extends ../layout

append title
    ="Profile"

append body
    .page-header.text-center
        h1
            span.fa.fa-anchor Profile Page
        a.btn.btn-default.btn-sm(href='/logout') Logout

    .row
        .col-sm-6
            .well
                h3
                    span.fa.fa-user &nbsp;&nbsp; Local

                p
                    strong Id
                    =user._id
                    br
                    strong Email
                    =user.local.email
                    br
                    strong Password
                    =user.local.password






