extends layout
append title
    ="LOGIN"
append body

    .container
        .col-sm-6.col-sm-offset-3
            h1
                span.fa.fa-sign-in
                ="Login"
            if message.length>0
                .alert.alert-danger=message

            // LOGIN FORM
            form(action='/login' method='post')
                .form-group
                    label Email
                    input.form-control(type='text', name='email')
                .form-group
                    label Password
                    input.form-control(type='password', name='password')
                button.btn.btn-warning.btn-lg(type='submit') Login
            hr
            p Not Registered ? &nbsp;&nbsp;
                a(href='/Signup')
                    strong Register
            p
                a(href='/') Go HOME


